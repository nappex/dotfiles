# GIT
alias ga='git add'
alias gb='git branch'
alias gc='git commit -v'
alias gcmsg='git commit -v -m'
alias gcam='git commit -v -a -m'
alias gcan!='git commit -v -a --amend --no-edit'
alias gcn!='git commit --no-edit --amend'
alias gd='git diff'
alias gf='git fetch'
alias gl='git log --stat'
alias glo='git log --oneline'
alias gm='git merge'
alias gpfwl='git push -v --force-with-lease'

[colors]
bg = #151515
fg = #FFFFFF
green = #50FA7B

[settings]
# Reload when the screen configuration changes (XCB_RANDR_SCREEN_CHANGE_NOTIFY event)
screenchange-reload = true

[bar/top]
width = 100%
height = 30
offset-x = 0
offset-y = 0

# When false, the center block is centered in the space between
# the left and right block.
fixed-center = false

background = ${colors.bg}
foreground = ${colors.fg}

padding-left = 0
padding-right = 2

module-margin-left = 0
module-margin-right = 1

font-0 = Hack Nerd Font Mono:size=10;3
font-1 = Hack Nerd Font Mono:size=18;3

modules-left = xworkspaces xwindow
modules-right = wired-network microphone speaker backlight cpu-temp wireless-network kbdlayout battery datetime

[module/xworkspaces]
type = internal/xworkspaces
icon-0 = nogroup;
icon-1 = one;1
icon-2 = two;2
icon-3 = three;3
icon-4 = four;4
icon-5 = five;5
icon-6 = six;6
icon-7 = seven;7
icon-8 = eight;8
icon-9 = nine;9

# from version 3.6 try %nwin%
label-active = %icon%
label-active-foreground = ${colors.bg}
label-active-background = ${colors.green}
label-active-padding = 2

label-occupied = %icon%
label-occupied-padding = 1

label-urgent = %icon%
label-urgent-padding = 1

label-empty =
label-empty-padding = 0

[module/xwindow]
type = internal/xwindow
format = <label>
label = >%title:0:20:...%
label-empty =

[module/datetime]
type = custom/script
exec = $HOME/scripts/polybar-modules.sh datetime
interval = 30

[module/microphone]
type = custom/script
exec = $HOME/scripts/polybar-modules.sh microphone
interval = 5

[module/speaker]
type = custom/script
exec = $HOME/scripts/polybar-modules.sh speaker
interval = 5

[module/battery]
type = custom/script
exec = $HOME/scripts/polybar-modules.sh battery
interval = 20

[module/wireless-network]
type = custom/script
exec = $HOME/scripts/polybar-modules.sh wifi
interval = 20

[module/wired-network]
type = custom/script
exec = $HOME/scripts/polybar-modules.sh ethernet
interval = 20

[module/kbdlayout]
type = custom/script
exec = $HOME/scripts/polybar-modules.sh kbdlayout
interval = 20

[module/cpu-temp]
type = custom/script
exec = $HOME/scripts/polybar-modules.sh cpu_temp
interval = 20

[module/backlight]
type = custom/script
exec = $HOME/scripts/polybar-modules.sh backlight
interval = 10

